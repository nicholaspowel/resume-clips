
<form id="save-clip">
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="inputTitle">Institute</label>
      <input name="clip[title]" type="text" class="form-control" id="inputTitle" placeholder="ex: General Assembly">
    </div>
    <div class="form-group col-md-6">
      <label for="inputPostition">Position</label>
      <input name="clip[position]" type="text" class="form-control" id="inputPostition" placeholder="ex: Software Engineering Fellow">
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="inputCategory">Category</label>
      <!-- refactor to use a partial -->
      <select class="form-control" name="clip[category]" id="inputCategory">
        <option value="Education">Education</option>
        <option value="Work">Work</option>
        <option value="Experience">Experience</option>
        <option value="Projects">Projects</option>
        <option value="Other">Other</option>
      </select>
    </div>
  </div>
  <div class="form-group">
    <label for="inputLocation">Location</label>
    <input name="clip[location]" type="text" class="form-control" id="inputLocation" placeholder="ex: Boston, MA or Paris, France">
  </div>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="inputStartDate">Start Date</label>
      <input name="clip[start_time]" type="date" class="form-control" id="inputStartDate">
    </div>
    <div class="form-group col-md-6">
      <label for="inputEndDate">End Date</label>
      <input name="clip[end_time]" type="Date" class="form-control" id="inputEndDate">
    </div>
  </div>
  <div class="form-group">
    <label for="inputDescription">Description</label>
    <textarea name="clip[description]" class="form-control" id="inputDescription" rows="5"></textarea>
  </div>
<!-- refactor later to make this form useable to updating exisiting clips -->
  <button type="submit" class="btn btn-primary save-btn">Save</button>
</form>
