
<form id="update-clip">
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="inputTitle">Institute</label>
      <input name="clip[title]" value="{{clip.title}}" type="text" class="form-control" id="inputTitle" placeholder="ex: General Assembly" >
    </div>
    <div class="form-group col-md-6">
      <label for="inputPostition">Position</label>
      <input name="clip[position]" value="{{clip.position}}" type="text" class="form-control" id="inputPostition" placeholder="ex: Software Engineering Fellow">
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="inputCategory">Category</label>
      <!-- refactor to use a partial -->
      <select class="form-control" name="clip[category]" id="inputCategory">
        <option value="Education" {{category clip.category "Education"}} >Education</option>
        <option value="Work" {{category clip.category "Work"}}>Work</option>
        <option value="Experience" {{category clip.category "Experience"}}>Experience</option>
        <option value="Projects" {{category clip.category "Projects"}}>Projects</option>
        <option value="Other" {{category clip.category "Other"}}>Other</option>
      </select>
    </div>
  </div>
  <div class="form-group">
    <label for="inputLocation">Location</label>
    <input name="clip[location]" value={{clip.location}} type="text" class="form-control" id="inputLocation" placeholder="ex: Boston, MA or Paris, France">
  </div>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="inputStartDate">Start Date</label>
      <input name="clip[start_time]" value="{{hasDate clip.start_time}}" type="date" class="form-control" id="inputStartDate">
    </div>
    <div class="form-group col-md-6">
      <label for="inputEndDate">End Date</label>
      <!-- refactor to handle empty Date data -->
      <input name="clip[end_time]" value={{hasDate clip.end_time}} type="Date" class="form-control" id="inputEndDate">
    </div>
  </div>
  <div class="form-group">
    <label for="inputDescription">Description</label>
    <textarea name="clip[description]" class="form-control" id="inputDescription" rows="5">{{clip.description}}</textarea>
  </div>
  <div class="form-row">
    <label for="clipID" class="hidden">Clip ID</label>
    <input class="hidden" type="text" name="clip[id]" readonly value="{{clip.id}}">
  </div>
<!-- refactor later to make this form useable to updating exisiting clips -->
  <div class="clip-buttons">
    <button class="btn btn-danger delete-btn" data-id="{{clip.id}}" type="button" name="button">Delete Clip</button>
    <button type="submit" class="btn btn-primary save-btn" data-id="{{clip.id}}">Save Changes</button>
  </div>
</form>
